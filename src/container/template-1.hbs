<div class="page">
    <div class="page-content">
      <div class="page-block"> 
        <header class="head row">
          <div class="col-3">
             {{> logo}}
          </div>
          
          <nav class="header-nav col-9">
            <div class="header-nav-right">
               {{>nav list=header}}
            </div>
          </nav>
        </header>
        <div class="divider"></div>
      </div>
       
      <div class="page-block">
        {{> hero data=hero}}
      </div>

      <div class="page-block">
        <main class="row g-0 plans">

         {{#each plans}}
          <div class="col plans-card">
            <div class="card">
              <div class="card-header">
                {{name}}
              </div>
              <div class="card-body">
                <div class="price">
                  <span class="price-amount">
                    ${{price}}
                  </span>
                  <span class="price-duration">
                    / mo
                  </span>
                </div>

                <div class="card-description">
                  {{#each features}}
                    <span class="card-description-item">{{this}}</span>
                  {{/each}}
                </div>
                <div class="card-description">
                  <button class="btn {{#if @first}}btn-outline-primary{{else}}btn-primary{{/if}} card-button">{{button}}</button>
                </div>
              </div>
            </div>
          </div>
         {{/each}}
        </main>
      </div>

      <div class="page-block"> 
          <div class="divider"></div>
          <footer class="header row">
            <div class="col-3">
              {{> logo}}
              <span class="footer-1">Coppyright 2023-2024</span>
            </div>

            {{#each footer}}
              <div class="col-3">
                 <span class="footer-title">{{title}}</span>
                 {{>nav list=links isVertical=true}}
              </div>
            {{/each}}
          </footer>
      </div>
    </div>
</div>